{
  "name": "forgemind-electron",
  "author": "ForgeMind.dev",
  "description": "ForgeMind Electron App",
  "version": "0.1.0",
  "private": true,
  "main": "build/main/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && tsc -p tsconfig.json",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "wait-on http://localhost:3000 && electron .",
    "dev": "concurrently \"npm run start\" \"npm run electron\"",
    "prod": "concurrently \"BROWSER=none npm run start\" \"npm run electron\"",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.3",
    "react-scripts": "^5.0.1",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "concurrently": "^7.0.0",
    "electron": "^24.8.8",
    "electron-builder": "^25.1.8",
    "typescript": "^4.9.5",
    "wait-on": "^8.0.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "supports es6-module"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.forgemind_dev.forgemind",
    "productName": "ForgeMind",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "dist/main/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}